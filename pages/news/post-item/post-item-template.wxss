.news-container {
  display: flex;
  flex-direction: column;
  margin-top: 22rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.news-author-date {
  margin-top: 10rpx 0 10rpx 20rpx;
}
.news-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.news-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
}
.news-title {
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
}
.news-image {
  width:100%;
  margin-left: 16px;
  margin: auto 0;
  margin-bottom: 15px;
}
.news-content {
  color: #666;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-bottom:  20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px; 
}
.post-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}