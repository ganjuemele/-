.view-head {
  width: 100%;
}
.date-chance {
  display: inline-flex;
  width: 100%;
  height: 30px;
}
.section-chance {
  display: inline-flex;
  color: #1296db;
  font-size: 22px;
  font-weight: bold;
  position: absolute;
  left: 50%;
  height: 30px;
  justify-content: center;
}
.section-chance view {
  position: relative;
  right: 50%;
}
.day {
  font-size: 22px;
  font-weight: bold;
}
.calendar {
  padding: 3px 10px;
  position: relative;
  display: flex;
}

.picker image {
  height: 24px;
  width: 24px;
}
.add {
  display: inline-flex;
  height: 23px;
  width: 24px;
  padding: 3px 10px 0 10px;
  position: absolute;
  right: 0;
}